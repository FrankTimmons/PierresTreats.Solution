@using PierresTreats.Models;

<h1>Welcome to Pierre's Sweets N' Treats</h1>

<h2>Treats:</h2>

@if (ViewBag.TreatList.Count != 0)
{
  <ul>
    @foreach (Treat treat in ViewBag.TreatList)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", "Treats", new { id = treat.TreatId })</li>
    }
  </ul>
} 
else
{
  <h3>No treats have been added yet!</h3>
}

<h2>Flavors:</h2>

@if (ViewBag.FlavorList.Count != 0)
{
  <ul>
    @foreach (Flavor flavor in ViewBag.FlavorList)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", "Flavors", new { id = flavor.FlavorId })</li>
    }
  </ul>
} 
else
{
  <h3>No flavors have been added yet!</h3>
}

<p>@Html.ActionLink("See all treats", "Index", "Treats")</p>
<p>@Html.ActionLink("See all flavors", "Index", "Flavors")</p>
<p>@Html.ActionLink("Account", "Index", "Account")</p>